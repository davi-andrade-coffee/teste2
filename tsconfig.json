{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                           
    "rootDir": "./src",                
    "outDir": "./dist",  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                     
    "skipLibCheck": true     ,
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"]    
}
